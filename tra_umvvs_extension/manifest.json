{
  "manifest_version": 3,
  "name": "TRA Vehicle Tax Calculator (UMVVS)",
  "version": "1.0.0",
  "description": "Calculate motor vehicle taxes in Tanzania using TRA UMVVS endpoints.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://www.beforward.jp/*",
    "https://beforward.jp/*",
    "https://*.beforward.jp/*",
    "https://taxpayerportal.tra.go.tz/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.beforward.jp/*",
        "https://beforward.jp/*",
        "https://*.beforward.jp/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TRA Vehicle Tax"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
