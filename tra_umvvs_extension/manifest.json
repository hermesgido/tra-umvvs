{
  "manifest_version": 3,
  "name": "TRA Vehicle Tax Calculator (UMVVS)",
  "version": "1.0.0",
  "description": "BE FORWARD car details and calculate motor vehicle import taxes in Tanzania using TRA UMVVS endpoints.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.beforward.jp/*",
    "https://beforward.jp/*",
    "https://*.beforward.jp/*",
    "https://taxpayerportal.tra.go.tz/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.beforward.jp/*",
        "https://beforward.jp/*",
        "https://*.beforward.jp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TRA Vehicle Tax",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
